{
  "manifest_version": 3,
  "name": "라프텔 Plus",
  "version": "1.1.0",
  "description": "라프텔에서 새로운 애니메이션을 더 편리하게 찾아보세요",
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://laftel.net/*",
    "https://*.laftel.net/*",
    "https://api.laftel.net/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://laftel.net/finder", "https://laftel.net/finder?*"],
      "exclude_matches": ["https://laftel.net/finder?*modal=*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ]
}
